# HTTP (8080 interno) - deja el challenge de Let's Encrypt
# y redirige el resto a HTTPS
server {
    listen 8080;
    listen [::]:8080;

    server_name khrix.com.ar www.khrix.com.ar;
    server_tokens off;

    # Necesario para el challenge HTTP-01 de Let's Encrypt
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    # Todo lo demás se va a HTTPS
    location / {
        return 301 https://$host$request_uri;
    }
}

# HTTPS (8443 interno) con WAF y tu sitio estático
server {
    listen 8443 ssl;
    listen [::]:8443 ssl;

    http2 on;

    server_name khrix.com.ar www.khrix.com.ar;
    server_tokens off;

    # Certificados emitidos por certbot
    ssl_certificate     /etc/letsencrypt/live/khrix.com.ar/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/khrix.com.ar/privkey.pem;

    # Opcional: algunos ajustes SSL básicos
    ssl_session_timeout 1d;
    ssl_session_cache   shared:SSL:10m;
    ssl_session_tickets off;

    # Sitio estático (tu carpeta ./html)
    location / {
        root /usr/share/nginx/html;
        index index.html;
    }

    # Es seguro y recomendado dejar el challenge accesible por HTTPS,
    # ya que facilita la automatización y el mantenimiento de la renovación de certificados.
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }
}